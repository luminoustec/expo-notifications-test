{
    "expo": {
        "name": "expo-notifications-test",
        "slug": "expo-notifications-test",
        "plugins": ["@react-native-firebase/app", "@notifee/react-native"],
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.luminoustec.expo-notifications-test",
            "googleServicesFile": "./GoogleService-Info.plist",
            "infoPlist": { "UIBackgroundModes": ["remote-notification"] }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#FFFFFF"
            },
            "package": "com.luminoustec.exponotificationstest",
            "googleServicesFile": "./google-services.json"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        }
    }
}
